<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="usedb.LectorsEnt" table="Lectors" schema="YanDB">
        <id name="idLec">
            <column name="id_lec" sql-type="int(11)"/>
        </id>
        <property name="fio">
            <column name="FIO" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="llogin">
            <column name="llogin" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="lpassword">
            <column name="lpassword" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>